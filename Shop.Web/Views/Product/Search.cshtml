@using Shop.Web.Models
@model Shop.Web.Infrastructure.Core.Pagination<ProductViewModel>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string keyword = ViewBag.Keyword;
    string sort = ViewBag.Sort;
}


<div class="women-product">
    <div class=" w_content">
        <div class="women">
            <a href="#"><h4>Tìm kiếm: @keyword - <span>@Model.TotalCount sản phẩm</span> </h4></a>
            <ul class="w_nav">
                <li>Sắp xếp : </li>
                <li><a class="active" href="?name=@keyword&sort=popular">Phổ biến</a></li> |
                <li><a href="?name=@keyword&sort=new">Mới </a></li> |
                <li><a href="?name=@keyword&sort=promotion">Giảm giá</a></li> |
                <li><a href="?name=@keyword&sort=price">Giá: Thấp - Cao</a></li>
                <div class="clearfix"> </div>
            </ul>
            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- grids_of_4 -->
    <div class="grid-product">
        @foreach (var product in Model.Items)
        {
            var url = $"/{product.Alias}.p-{product.ID}.html";
            <div class="product-grid">
                <div class="content_box">
                    <a href="@url">
                        <dvi class="left-grid-view grid-view-left">
                            <img src="@product.Image" class="img-responsive watch-right" alt="" />
                            <div class="mask">
                                <div class="info">Quick View</div>
                            </div>
                        </dvi>
                    </a>
                </div>
                <h4><a href="@url">@product.Name</a></h4>
                <p>@product.Description</p>
                @(product.Price == 0 ? "Liên hệ" : product.Price.ToString("N2"))
            </div>

        }
        <div class="clearfix"> </div>
        @if (Model.TotalPages > 1)
        {
            var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
            var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (Model.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?name=@keyword&page=@(Model.Page - 1)&sort=@sort" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }
                    @for (int i = startPageIndex; i <= endPageIndex; i++)
                    {
                        if (Model.Page == i)
                        {
                            <li class="page-item active"><a class="page-link" href="?name=@keyword&page=@i&sort=@sort">@i</a></li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="?name=@keyword&page=@i&sort=@sort">@i</a></li>
                        }

                    }
                    @if (Model.Page < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?name=@keyword&page=@(Model.Page + 1)&sort=@sort" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    </div>
</div>





